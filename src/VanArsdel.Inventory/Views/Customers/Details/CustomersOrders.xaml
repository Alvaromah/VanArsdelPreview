<UserControl
    x:Class="VanArsdel.Inventory.Views.CustomersOrders"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:VanArsdel.Inventory.Controls"
    xmlns:views="using:VanArsdel.Inventory.Views"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="400">

    <Grid RowSpacing="6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <controls:ListToolbar Query="{x:Bind ViewModel.Query, Mode=TwoWay}" QuerySubmitted="OnQuerySubmitted" ButtonClick="OnToolbarClick" />
        <views:CustomersOrdersControl Grid.Row="1" ItemsSource="{x:Bind ViewModel.Items}" />
        <controls:PaginationFooter Grid.Row="2" ItemsCount="{x:Bind ViewModel.ItemsCount, Mode=OneWay}" PageIndex="{x:Bind ViewModel.PageIndex, Mode=TwoWay}" Visibility="{x:Bind ViewModel.IsDataAvailable}" />
    </Grid>
    
</UserControl>
